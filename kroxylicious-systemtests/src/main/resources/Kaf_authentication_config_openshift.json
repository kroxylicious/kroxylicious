{
  "spec": {
    "volumes": [{
      "name": "config-volume",
      "configMap": {
        "name": "%CONFIGMAP_NAME%",
        "items": [{
          "key": "config",
          "path": "config"
        }]
      }
    }],
    "containers": [{
      "name": "%CONTAINER_NAME%",
      "volumeMounts": [{
        "mountPath": "%MOUNT_PATH%",
        "name": "config-volume",
        "readOnly": true
      }],
      "securityContext": {
        "allowPrivilegeEscalation": false,
        "runAsNonRoot": true,
        "seccompProfile": {
          "type": "RuntimeDefault"
        },
        "capabilities": {
          "drop": [ "ALL" ]
        }
    }]
  }
}
